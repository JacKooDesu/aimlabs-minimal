{
  "include": [
    "./src/**/*",
    "./src/**/*.ts",
    "./src/**/*.mts",
    "../Assets/PuerTS/Typing",
    "../Assets/Gen/Typing/",
    "./Core/Typing"
  ],
  "exclude": ["./src/migration_updater/**"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ES2020", "ScriptHost", "DOM.Iterable"],
    "typeRoots": [
      "../Assets/Puerts/Typing",
      "../Assets/Gen/Typing",
      "./node_modules/@types",
      "./Core/Typing"
    ],
    "types": [],
    "preserveSymlinks": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "outDir": "./output",
    // "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": false,
    "strict": false,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "stripInternal": false
  }
}
