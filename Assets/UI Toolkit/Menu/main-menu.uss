.selection-parent {
    flex-grow: 1;
    width: 40%;
    margin-top: 80px;
    margin-right: 80px;
    margin-bottom: 80px;
    margin-left: 80px;
    padding-top: 80px;
    padding-right: 80px;
    padding-bottom: 80px;
    padding-left: 80px;
    background-color: rgba(17, 0, 20, 0.7);
    align-content: flex-start;
    scale: 1 1;
    transition-property: scale;
    transition-duration: 0.5s;
    transition-timing-function: ease-out-cubic;
    transform-origin: left top;
}

.selection-parent .unity-button {
    background-color: rgba(102, 102, 102, 0.4);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    -unity-text-align: middle-left;
    font-size: 36px;
    -unity-font-style: bold;
    -unity-font-definition: url("project://database/Assets/TextMesh%20Pro/Fonts/LiberationSans.ttf?fileID=12800000&guid=e3265ab4bf004d28a9537516768c1c75&type=3#LiberationSans");
    color: rgb(153, 153, 153);
    letter-spacing: 5px;
    margin-top: 10px;
    margin-bottom: 10px;
    padding-top: 20px;
    padding-right: 20px;
    padding-bottom: 20px;
    padding-left: 20px;
    transition-property: opacity;
    transition-duration: 0.2s;
}

.selection-parent .unity-button:hover {
    background-color: rgba(0, 0, 0, 0.4);
    -unity-text-align: middle-left;
    font-size: 36px;
    -unity-font-style: bold;
    -unity-font-definition: url("project://database/Assets/TextMesh%20Pro/Fonts/LiberationSans.ttf?fileID=12800000&guid=e3265ab4bf004d28a9537516768c1c75&type=3#LiberationSans");
    color: rgb(204, 204, 204);
    letter-spacing: 5px;
}

.exit-button {
    top: 5%;
    right: 5%;
    background-color: rgb(205, 205, 205);
    width: 60px;
    height: 60px;
    font-size: 24px;
    -unity-font-definition: url("project://database/Assets/TextMesh%20Pro/Fonts/LiberationSans.ttf?fileID=12800000&guid=e3265ab4bf004d28a9537516768c1c75&type=3#LiberationSans");
    -unity-font-style: bold;
    border-left-color: rgb(113, 113, 113);
    border-right-color: rgb(113, 113, 113);
    border-top-color: rgb(113, 113, 113);
    border-bottom-color: rgb(113, 113, 113);
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
}

.exit-button:hover {
    top: 5%;
    right: 5%;
    background-color: rgb(205, 205, 205);
    width: 60px;
    height: 60px;
    font-size: 24px;
    -unity-font-definition: url("project://database/Assets/TextMesh%20Pro/Fonts/LiberationSans.ttf?fileID=12800000&guid=e3265ab4bf004d28a9537516768c1c75&type=3#LiberationSans");
    -unity-font-style: bold;
    border-left-color: rgb(255, 0, 0);
    border-right-color: rgb(255, 0, 0);
    border-top-color: rgb(255, 0, 0);
    border-bottom-color: rgb(255, 0, 0);
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
    scale: 1.1 1.1;
}

.selection-parent__sleep {
    flex-grow: 1;
    width: 40%;
    margin-top: 80px;
    margin-right: 80px;
    margin-bottom: 80px;
    margin-left: 80px;
    padding-top: 80px;
    padding-right: 80px;
    padding-bottom: 80px;
    padding-left: 80px;
    background-color: rgba(17, 0, 20, 0.7);
    align-content: flex-start;
    transform-origin: left top;
    scale: 0.1 1;
    transition-duration: 0.5s;
    transition-timing-function: ease-out-cubic;
    transition-property: scale;
}

.selection-parent__sleep .unity-button {
    background-color: rgba(102, 102, 102, 0.4);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    -unity-text-align: middle-left;
    font-size: 36px;
    -unity-font-style: bold;
    -unity-font-definition: url("project://database/Assets/TextMesh%20Pro/Fonts/LiberationSans.ttf?fileID=12800000&guid=e3265ab4bf004d28a9537516768c1c75&type=3#LiberationSans");
    color: rgb(153, 153, 153);
    letter-spacing: 5px;
    margin-top: 10px;
    margin-bottom: 10px;
    padding-top: 20px;
    padding-right: 20px;
    padding-bottom: 20px;
    padding-left: 20px;
    opacity: 0;
    transition-duration: 0.2s, 0s;
    visibility: hidden;
    transition-property: opacity, visibility;
    transition-timing-function: ease-in-cubic, ease;
    transition-delay: 0s, 0.2s;
}
